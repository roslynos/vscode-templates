{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build-debug",
                "mkdir",
                "deploy-debug"
            ],
        },
        {
            "label": "release",
            "dependsOrder": "sequence",
            "dependsOn": [
                "build-release",
                "clean",
                "mkdir",
                "deploy-release",
            ],
        },
        {
            "label": "build-debug",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "-r",
                "${config:dotnet.rid}",
                "${workspaceFolder}/${config:dotnet.project}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "--self-contained"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "label": "build-release",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "-c",
                "Release",
                "-r",
                "${config:dotnet.rid}",
                "${workspaceFolder}/${config:dotnet.project}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary",
                "-p:PublishTrimmed=true",
                "-p:PublishSingleFile=false",
                "-p:PublishReadyToRun=true",
                "--self-contained"
            ],
            "problemMatcher": "$msCompile",
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "${workspaceFolder}/${config:dotnet.project}.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "deploy-debug",
            "type": "shell",
            "command": "scp",
            "args": [
                "-r",
                "bin/Debug/${config:dotnet.version}/${config:dotnet.rid}/*",
                "${config:remote.user}@${config:remote.host}:\"${config:remote.path}/${workspaceFolderBasename}\""
            ],
            "problemMatcher": [],
        },
        {
            "label": "deploy-release",
            "type": "shell",
            "command": "scp",
            "args": [
                "-r",
                "bin/Release/${config:dotnet.version}/${config:dotnet.rid}/publish/*",
                "${config:remote.user}@${config:remote.host}:\"${config:remote.path}/${workspaceFolderBasename}\""
            ],
            "problemMatcher": [],
        },
        {
            "label": "mkdir",
            "type": "shell",
            "command": "ssh",
            "args": [
                "${config:remote.user}@${config:remote.host}",
                "mkdir -p ${config:remote.path}/${workspaceFolderBasename}"
            ],
            "problemMatcher": [],
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "ssh",
            "args": [
                "${config:remote.user}@${config:remote.host}",
                "rm -rf ${config:remote.path}/${workspaceFolderBasename}/*"
            ],
            "problemMatcher": [],
        },
    ],
    "presentation": {
        "revealProblems": "onProblem",
        "showReuseMessage": false
    },
}